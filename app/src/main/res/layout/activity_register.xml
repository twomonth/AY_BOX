<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@style/AppTheme.NoActionBar"
    android:background="@mipmap/logina">
    <ImageView
        android:id="@+id/iv_register_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/title_back"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackBack"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/et_register_telephone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/et_login"
            android:textSize="13dp"
            android:hint="请输入11位手机号码"/>
        <LinearLayout
            android:id="@+id/ll_captcha"
            android:layout_below="@+id/et_register_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_register_captcha"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@drawable/et_login"
                android:textSize="13dp"
                android:hint="请输入验证码"/>
            <Button
                android:id="@+id/bt_get_captcha"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:background="@drawable/btn_login"
                android:textColor="@color/colorWhite"
                android:text="获取验证码"/>

        </LinearLayout>
        <EditText
            android:id="@+id/et_register_password"
            android:layout_below="@+id/ll_captcha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/et_login"
            android:textSize="13dp"
            android:hint="请输入密码"/>
        <Button
            android:id="@+id/bt_register"
            android:layout_below="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/btn_login"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:text="注册"/>


    </RelativeLayout>

</RelativeLayout>