<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DC000000"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_logo_change"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/logodd" />
        <EditText
            android:id="@+id/et_change_telephone"
            android:layout_width="match_parent"
            android:phoneNumber="true"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/iv_logo_change"
            android:paddingLeft="5dp"
            android:background="@drawable/et_login"
            android:textSize="13dp"
            android:textColor="@color/colorWhite"
            android:hint="请输入11位手机号码"/>
        <LinearLayout
            android:id="@+id/ll_captcha"
            android:layout_below="@+id/et_change_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_change_captcha"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:inputType="number"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@drawable/et_login"
                android:textSize="13dp"
                android:textColor="@color/colorWhite"
                android:hint="请输入验证码"/>
            <Button
                android:id="@+id/bt_get_captcha_change"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:background="@drawable/btn_login"
                android:textColor="@color/colorWhite"
                android:text="获取验证码"/>
            <TextView
                android:id="@+id/tv_timer_change"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:visibility="gone"/>

        </LinearLayout>
        <EditText
            android:id="@+id/et_change_password"
            android:layout_below="@+id/ll_captcha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/et_login"
            android:textSize="13dp"
            android:textColor="@color/colorWhite"
            android:hint="请输入新密码"/>
        <Button
            android:id="@+id/bt_change"
            android:layout_below="@+id/et_change_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/btn_login"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:text="确认修改"/>
        <TextView
            android:id="@+id/tv_tologin_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bt_change"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="15dp"
            android:text="返回到登录"/>

    </RelativeLayout>



</RelativeLayout>
