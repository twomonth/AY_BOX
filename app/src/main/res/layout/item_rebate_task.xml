<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/rl_back">
    <ImageView
        android:id="@+id/iv_icon_rebate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_name_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/iv_icon_rebate"
        android:layout_alignTop="@+id/iv_icon_rebate"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="游戏名称"/>
    <TextView
        android:id="@+id/tv_rebate_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_name_rebate"
        android:layout_toRightOf="@+id/iv_icon_rebate"
        android:textSize="20dp"
        android:textColor="@color/colorOrange1"
        tools:text="chongzhijine"
        />
    <TextView
        android:id="@+id/tv_rebate_diff_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        tools:text="haicha"/>
    <Button
        android:id="@+id/bt_rebate_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_login"
        android:text="提交"/>

</RelativeLayout>