<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/rl_back">
    <ImageView
        android:id="@+id/iv_icon_all"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_name_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon_all"
        android:layout_toRightOf="@id/iv_icon_all"
        android:layout_alignTop="@+id/iv_icon_all"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="游戏名称"/>
    <TextView
        android:id="@+id/tv_type_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_back_type"
        android:layout_toRightOf="@+id/tv_name_all"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite"
        android:text="leixing"/>
    <TextView
        android:id="@+id/tv_size_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_name_all"
        android:textColor="@color/colorPrimary"
        android:text="120M"/>
    <TextView
        android:id="@+id/tv_publicty_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon_all"
        android:layout_alignLeft="@+id/tv_name_all"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="10dp"
        android:text="游戏简介"/>

</RelativeLayout>