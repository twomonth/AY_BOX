<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aygames.twomonth.aybox.activityfb.GiftActivity">
    <RelativeLayout
        android:id="@+id/ll_gift_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorOrange1">
        <ImageView
            android:id="@+id/iv_gift_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/title_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:text="游戏礼包"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_gift_head"
        android:background="@mipmap/back"/>

</RelativeLayout>
